<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl flex p-10">Meet the Team</h1>
    <%= link_to 'New card', new_card_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="grid grid-cols-2 gap-10 flex justify-items-center py-20 bg-sky-100">
    <% @cards.each do |card| %>
      <div class="flex flex-col space-y-4 bg-white p-10 rounded outline outline-2 outline-black w-100">
        <%= image_tag(card.image_url, class: 'object-cover h-80 w-80 py-5') %>
        <h1 class="text-xl font-bold"><%= card.name %></h1>
        <p class="mb w-80 h-30">
          <%= truncate(strip_tags(card.description), length: 200) %>
        </p>
        <div class="place-self-end rounded-lg py-3 px-5 bg-sky-900 text-white block font-medium">
          <%= link_to 'Show', card, class: 'hover:underline' %>
        </div>

      </div>
    <% end %>
  <div>
</div>
