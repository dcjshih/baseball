<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    
    
    <%= render @card %>
    
    <div class="py-10 flex justify-between">
      <%= link_to 'Flip', :back, class: "ml-2 rounded-lg py-3 px-5 bg-[#042c54] inline-block font-medium text-white flex justify-start" %>
      <%= link_to 'Back to cards', cards_path, class: "ml-2 rounded-lg py-3 px-5 bg-slate-200 inline-block font-medium text-black flex justify-end" %>
    </div>
  </div>
</div>


